<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_loading_error_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_net_refresh_emotion" />

        <Button
            android:id="@+id/btn_connect_net_work"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/iv_loading_error_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_net_error_bg"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="网络连接失败,点击重试"
            android:textColor="#e7e7e7"
            android:textSize="15dp" />

    </RelativeLayout>

</FrameLayout>