<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent_6">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/icon_loading_dialog_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_laoding_dialog_txt"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_loading_dialog_loading_txt" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content">

            <com.kw_support.view.LoadingTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="2dp"
                android:text="..."
                android:textColor="@color/loading_point"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>