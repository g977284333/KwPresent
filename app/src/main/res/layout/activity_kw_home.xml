<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KwHomeActivity">

    <Button
        android:id="@+id/btn_bounce_scroll_view"
        android:text="BounceScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_baidu_map"
        android:text="BaiDuMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_bounce_scroll_view"/>

    <Button
        android:id="@+id/btn_list_or_scroll_view"
        android:text="ListOrScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_baidu_map"/>

    <Button
        android:id="@+id/btn_photo_or_image"
        android:text="PhotoOrImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_list_or_scroll_view"/>

    <Button
        android:id="@+id/btn_custom_widget"
        android:text="CustomWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_photo_or_image"/>

    <com.kw_support.view.OverLayLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"/>

    </com.kw_support.view.OverLayLayout>

</RelativeLayout>
