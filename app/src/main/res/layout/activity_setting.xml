<?xml version="1.0" encoding="utf-8"?>
<com.kw_support.view.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_swipe_back_edge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:text="手势返回"
                    android:textColor="@color/setting_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_setting_swipe_back_edge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:layout_marginTop="4dp"
                    android:text="左"
                    android:textColor="@color/setting_txt"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_notify_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="是否接收消息"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_notify_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_notify_sound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="声音提醒"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_notify_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_notify_vibrate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="震动提醒"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_notify_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_upload_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:text="上传图片设置"
                    android:textColor="@color/setting_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_setting_upload_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:layout_marginTop="4dp"
                    android:text="auto"
                    android:textColor="@color/setting_txt"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_picture_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:text="图片加载模式"
                    android:textColor="@color/setting_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_setting_picture_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:layout_marginTop="4dp"
                    android:text="原图"
                    android:textColor="@color/setting_txt"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_load_org_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="默认加载原图"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_notify_load_org_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_picture_none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="无图模式"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_picture_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_disable_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="关闭缓存"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_disable_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_crash_log_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/setting_margin_edge"
                android:text="崩溃日志上传"
                android:textColor="@color/setting_txt"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_setting_crash_log_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/setting_margin_edge"
                android:clickable="false" />

        </com.kw_support.view.RippleView>

        <com.kw_support.view.RippleView
            android:id="@+id/btn_setting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:layout_marginTop="@dimen/setting_item_divider"
            android:background="@drawable/btn_selector"
            app:rv_color="@color/reppe_view_color"
            app:rv_type="rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:text="清除缓存"
                    android:textColor="@color/setting_txt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_setting_clear_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_margin_edge"
                    android:layout_marginTop="4dp"
                    android:text="0.0M"
                    android:textColor="@color/setting_txt"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.kw_support.view.RippleView>

    </LinearLayout>

</com.kw_support.view.OverScrollView>