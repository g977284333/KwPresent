<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="MainTheme">
        <item name="android:windowNoTitle">true</item>
        <!--抽屉开关样式-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- LaunchActivity theme. -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--抽屉开关箭头颜色-->
        <item name="color">@android:color/white</item>
    </style>

    <style name="custom_text_view" parent="@android:style/Widget.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="custom_gray_big_text" parent="@style/custom_text_view">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="custom_gray_middle_text" parent="@style/custom_text_view">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
